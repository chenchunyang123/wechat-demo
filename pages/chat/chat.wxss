page {
    background-color: #EFEFEF;
    overflow: hidden;
}

.ct-title {
    width: 100%;
    height: 295rpx;
    position: relative;
    text-align: center;
}

.ct-title > image {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    z-index: -2;
}

.ct-title > text {
    color: #fff;
    font-size: 36rpx;
    line-height: 170rpx;
}

.ct-botTip {
    width: 746rpx;
    height: 243rpx;
    position: absolute;
    left: 0;
    top: 100rpx;
}

.ct-botTip image {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    z-index: -1;
}

.ct-botTip-text {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    padding-left: 230rpx;
}

.ct-botTip-text text:nth-child(1) {
    color: #3978FC;
    font-size: 30rpx;
    padding-top: 80rpx;
}

.ct-botTip-text view:nth-child(2) {
    color: #666;
    font-size: 24rpx;
    padding-top: 2rpx;
}

.ct-dialog {
    width: 750rpx;
    /* 通过最后一个值来调整 */
    height: calc(100vh - 98rpx - 347rpx - 100rpx);
}

.ct-dialog-inner {
    width: 100%;
    padding: 0 30rpx;
    box-sizing: border-box;
}

/* 语音识别失败的toast */
.van-toast {
    padding: 35rpx 15rpx !important;
    background-color: #000 !important;
    font-size: 28rpx !important;
    line-height: 40rpx !important;
    border-radius: 12rpx !important;
}

/* 浮层 */
.ct-float {
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0);
    position: absolute;
    left: 0;
    top: 0;
    z-index: 998;
}
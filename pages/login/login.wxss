.lg-title {
    width: 100%;
    height: 194rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.lg-title text {
    font-size: 36rpx;
    font-weight: 500;
    color: #333;
}

.lg-pic {
    width: 100%;
}

.lg-pic-bg {
    width: 698rpx;
    height: 435rpx;
    margin-left: 38rpx;
}

.lg-tips {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 60rpx;
}

.lg-tips > view:nth-child(1) {
    font-size: 39rpx;
    line-height: 55rpx;
    margin-bottom: 7rpx;
}

.lg-tips > view:nth-child(1) text {
    color: #3978FC;
}

.lg-tips > text:nth-child(2) {
    font-size: 24rpx;
    line-height: 33rpx;
    color: #666;
}

.lg-btn {
    width: 690rpx;
    position: absolute;
    left: 30rpx;
    bottom: 30rpx;
}

.lg-btn button {
    box-shadow: 0rpx 4rpx 32rpx -4rpx rgba(0, 120, 226, 0.5);
    font-size: 32rpx;
}
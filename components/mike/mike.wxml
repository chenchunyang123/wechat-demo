<!-- 录音按钮 -->
<view class="mk-wrap" bindtouchstart="handleTouchStart" bindtouchend="handleTouchEnd">
    <view 
        hover-class="mk-hover"
        hover-start-time="0"
        hover-stay-time="0"
    >
        <!-- 文案 -->
        <text>{{ifSpeak ? '松手结束' : '按住说话'}}</text>
    </view>
</view>

<!-- 取消录音框 -->
<view class="mk-cancle" hidden="{{!ifSpeak}}">
    <image src="/asset/mike.png"></image>
    <image src="/asset/mike-vol.png"></image>
    <image src="/asset/mike-back.png"></image>
    <text>上划取消</text>
</view>